---
layout: invasion
title: Videos
javascripts: [ /javascripts/jquery.tmpl.js, /javascripts/jquery.jgfeed.js ]
---
%script{ :id=> 'video-tmpl', :type=>'text/x-jquery-tmpl'}
  %tr
    %td{:colspan=>'2', :style=>'font-weight:bold'} ${title}
  %tr
    %td{ :style=>'text-align: center; vertical-align:top' }
      %a{ :href=> "${url}"}
        %img{ :src=>"${thumbnail_medium}"}
    %td{ :style=>'vertical-align:top' }
      {{html description}}

%h2
  Videos

  %table#videos

:javascript
  jQuery.ajax({
      url: 'http://vimeo.com/api/v2/channel/arquillian/videos.json',
      dataType: 'jsonp',
      jsonp: 'callback',
      jsonpCallback: 'display'
    })

  function display(data) {
    $('#video-tmpl').tmpl(data).appendTo('#videos');
  }
